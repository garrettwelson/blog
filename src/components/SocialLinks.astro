---
import data from "../data/site.json";
import { Image } from "astro:assets"
---

<!-- icons from 
  https://www.svgrepo.com/collection/social-media-outline-vectors/
 -->
<nav>
  <ul class="flex flex-row">
    <li class="mx-1">
      <a href={data.social.github}
        ><img class="w-6 h-6" src="logos/github.svg" alt="logo for github.com" /></a
      >
    </li>
    <li class="mx-1">
      <a href={data.social.twitter}
        ><img class="w-6 h-6" src="logos/twitter.svg" alt="logo for twitter.com" /></a
      >
    </li>
    <li class="mx-1">
      <a href={data.social.mastodon}
        ><img
          class="w-6 h-6"
          src="logos/mastodon.svg"
          alt="logo for mastodon.social"
        /></a
      >
    </li>
    <li class="mx-1">
      <a href={data.social.linkedin}
        ><img class="w-6 h-6" src="logos/linkedin.svg" alt="logo for linkedin.com" /></a
      >
    </li>
  </ul>
</nav>
