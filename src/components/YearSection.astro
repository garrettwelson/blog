---
const { year, months } = Astro.props;
import { numberToMonth } from "../utils/posts-by-date";
import MonthSection from "./MonthSection.astro";
const sortedMonths = Object.keys(months).sort().reverse();
---

<div class="flex flex-col md:flex-row">
  <h3 class="text-xl my-2">{year}</h3>
  <div class="flex flex-col">
    {
      sortedMonths.map((month) => {
        return (
          <MonthSection month={numberToMonth(month)} days={months[month]} />
        );
      })
    }
  </div>
</div>
