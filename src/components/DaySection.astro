---
const { day, posts } = Astro.props;
---

<div class="ml-2 md:ml-8">
  <h5 class="text-xl my-2">{day}</h5>
  <ul class="ml-4">
    {
      posts.map((post) => {
        return (
          <li>
            <a class="font-bold underline" href={`/blog/${post.slug}`}>
              {post.data.title}
            </a>
            <span> ~ </span>
            <time datetime={String(post.data.date)}>
              {post.data.date?.toLocaleDateString()}
            </time>
          </li>
        );
      })
    }
  </ul>
</div>
