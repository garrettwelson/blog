---
import BaseLayout from "../layouts/BaseLayout.astro";
import QuickDetails from "../components/QuickDetails.astro";
import { Content as ProfessionalBio } from "../content/text/professional.md";
import { Content as PersonalBio } from "../content/text/personal.md";
---

<BaseLayout pageTitle="about">
  <h2 class="text-2xl font-bold mb-6">about me</h2>
  <section class="mb-4">
    <h3 class="text-xl mb-4">quick details</h3>
    <QuickDetails />
    <h3 class="text-xl my-4">professional</h3>
    <div class="prose">
      <ProfessionalBio />
    </div>
    <h3 class="text-xl my-4">personal</h3>
    <div class="prose">
      <PersonalBio />
    </div>
  </section>
</BaseLayout>
